<UserControl x:Class="BIMOpsToolkit.Tools.Versioning.Views.VersionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BIMOpsToolkit.Tools.Versioning.Views"
             xmlns:viewmodel="clr-namespace:BIMOpsToolkit.Tools.Versioning.ViewModels"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             d:DataContext="{d:DesignInstance Type=viewmodel:VersionPanelViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="400"
             Background="White"
             FontFamily="/BIMOpsToolkit.Tools;component/Resources/Roboto/Roboto-Regular.ttf#Roboto">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="Margin" Value="5 3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>
        <!-- Placeholder Style -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox" 
               BasedOn="{StaticResource RoundedTextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                            CornerRadius="4"
                            BorderBrush="#CCC"
                            BorderThickness="1"
                            Background="{TemplateBinding Background}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"
                                      Background="Transparent"/>
                                <TextBlock x:Name="Watermark"
                                   Text="{TemplateBinding Tag}"
                                   Foreground="Gray"
                                   Margin="6,2,0,0"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <!-- Fokus-Styling -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <DockPanel LastChildFill="True" Margin="8">
        <!-- Header -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <Button Content="Save" Command="{Binding OpenSaveVersionCommand}"
                        Style="{DynamicResource RoundedButton}"
                        Width="50"/>
                <Button Content="Compare" Command="{Binding OpenCompareVersionCommand}" 
                        Style="{DynamicResource RoundedButton}"
                        Width="70"/>
                <Button Content="Settings" Command="{Binding OpenSettingsVersionCommand}" 
                        Style="{DynamicResource RoundedButton}"
                        Width="70"/>
                <TextBox Margin="5 3" 
                         Style="{StaticResource WatermarkTextBox}"
                         Tag="Search..."
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            </DockPanel>
            <ListView Grid.Row="1" Margin="5 7"
                      ItemsSource="{Binding Versions}"
                      SelectedItem="{Binding SelectedVersion}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Background="White"
                      BorderBrush="#CCC"
                      BorderThickness="1">
                <ListView.Template>
                    <ControlTemplate TargetType="ListView">
                        <Border CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <DockPanel>
                                <GridViewHeaderRowPresenter DockPanel.Dock="Top"
                                                Columns="{Binding View.Columns, RelativeSource={RelativeSource TemplatedParent}}"
                                                AllowsColumnReorder="True"
                                                Margin="0,0,0,2"/>
                                <ScrollViewer Focusable="false">
                                    <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </ScrollViewer>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </ListView.Template>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Version" Width="75" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Created" Width="90" DisplayMemberBinding="{Binding CreatedAt}" />
                        <GridViewColumn Header="By" Width="100" DisplayMemberBinding="{Binding Author}" />
                        <GridViewColumn Header="Comments" Width="150" DisplayMemberBinding="{Binding Comment}" />
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>
    </DockPanel>
</UserControl>
