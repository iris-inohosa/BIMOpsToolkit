<UserControl x:Class="BIMOpsToolkit.Tools.Versioning.Views.VersionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BIMOpsToolkit.Tools.Versioning.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="BIMOpsToolkit Dockable Panel"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0 0 0 10"/>

            <TextBlock Text="Model Version: " FontWeight="SemiBold"/>
            <TextBox Text="{Binding ModelVersion, UpdateSourceTrigger=PropertyChanged}" Margin="0 5 0 10"/>

            <Button Content="Save Version"
                    Width="120"
                    Command="{Binding SaveVersionCommand}" />
        </StackPanel>

    </Grid>
</UserControl>
